# Database - use Neon, Supabase, or local Postgres
# DATABASE_URL="postgresql://user:password@localhost:5432/yueqiula"
# Neon: 若遇 connection closed，可加 ?connect_timeout=30 或使用连接池地址
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth - https://next-auth.js.org/configuration/options
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Email OTP - Resend (https://resend.com), 未配置时开发环境打印 OTP 到控制台
# RESEND_API_KEY="re_xxx"
# EMAIL_FROM="约球啦 <noreply@yourdomain.com>"

# Amap (高德地图) - https://lbs.amap.com/
# 需要 NEXT_PUBLIC_ 前缀以便客户端访问
NEXT_PUBLIC_AMAP_KEY="your-amap-js-api-key"
# 场地搜索 Web 服务 API，可与上述同一 key（需勾选 Web服务）
# AMAP_WEB_SERVICE_KEY=""

# WeChat (微信开放平台 网站应用) - 注册公司后再启用
# https://open.weixin.qq.com/ 创建网站应用，回调: {NEXTAUTH_URL}/api/auth/callback/wechat
# WECHAT_ENABLED="true"
# WECHAT_APP_ID=""
# WECHAT_APP_SECRET=""
# NEXT_PUBLIC_WECHAT_ENABLED="true"

# Tencent Cloud SMS (腾讯云短信) - https://console.tencentcloud.com/smsv2
# 需在控制台创建应用、签名、模板并获取审批
TENCENT_SMS_SECRET_ID=""
TENCENT_SMS_SECRET_KEY=""
TENCENT_SMS_SDK_APP_ID=""
TENCENT_SMS_SIGN_NAME=""
TENCENT_SMS_TEMPLATE_ID=""
